{
	"environments": [
		{
			"browserName": "chrome",
			"fixSessionCapabilities": "no-detect"
		}
	],

	"leaveRemoteOpen": true,

	"node": {
		"loader": {
			"script": "./intern-requirejs-loader.js",
			"options": {
				"baseUrl": ".",
				"packages": [
					{
						"name": "intern-requirejs-example",
						"location": "."
					}
				]
			}
		}
	},

	"browser": {
		"loader": {
			"script": "./intern-requirejs-loader.js",
			"options": {
				"baseUrl": "../../..",
				"packages": [
					{
						"name": "intern-requirejs-example",
						"location": "../../.."
					},
					{
						"name": "dcl",
						"location": "../node_modules/dcl"
					}
				]
			}
		}
	},

	"suites": [ "tests/unit/unit1" ],
	"functionalSuites": [ "tests/functional/functional1" ],


	"coverage": [
		"**/*.js",
		"!node_modules/**",
		"!tests/**",
		"!intern*",
		"!Gruntfile.js"
	],

	"tunnelOptions": {
		"drivers": [ "firefox", "internet explorer", "MicrosoftEdge" ]
	},

	"myCustomVar": 123,

	"configs": {
		"local": {
			"description": "Run tests on local system, automatically starting chromedriver"
		},
		"grid": {
			"description": "Run against manually started selenium grid",
			"tunnel": "null",
			"environments": [
				{ "browser": "MicrosoftEdge" },
				{ "browser": "firefox" },
				{ "browser": "chrome" }
			]
		},
		"browserstack": {
			"description": "Run tests on BrowserStack",
			"tunnel": "browserstack",
			"maxConcurrency": 2,
			"capabilities": {
				"idle-timeout": 60,
				"fixSessionCapabilities": "no-detect"
			},
			"environments": [
				{ "browser": "internet explorer", "version": ["11"] },
				{
					"browser": "firefox",
					"version": ["36", "latest"],
					"platform": ["WINDOWS", "MAC"]
				},
				{
					"browser": "chrome",
					"version": ["38", "latest"],
					"platform": ["WINDOWS", "MAC"]
				},
				{ "browser": "safari", "version": ["9", "10"] }
			]
		},


		"browserstack-ie": {
			"extends": ["browserstack"],
			"environments": [
				{ "browserName": "internet explorer", "version": "11", "name": "intern-requirejs-example"}
			]
		},

		"sauce": {
			"description": "Run tests on SauceLabs",
			"environments": [
				{ "browserName": "MicrosoftEdge", "version": "17", "fixSessionCapabilities": false, "name": "intern-requirejs-example"},
				{ "browserName": "internet explorer", "version": "11",  "fixSessionCapabilities": false, "name": "intern-requirejs-example"},
				{ "browserName": "firefox", "version": "60", "platform": [ "Windows 10" ], "name": "intern-requirejs-example" },
				{ "browserName": "chrome", "version": "68", "platform": [ "Windows 10" ], "name": "intern-requirejs-example" },
				{ "browserName": "safari", "version": "11", "name": "intern-requirejs-example" },
				{ "browserName": "iphone", "platform": "OS X 10.10", "version": "10.2", "deviceName": "iPad Retina", "name": "intern-requirejs-example" },
				{ "browserName": "android", "platform": "Linux", "version": "6.0",
					"deviceName": "Android Emulator", "deviceType": "tablet", "name": "intern-requirejs-example" }
			],

			"proxyPort": 9000,
			"maxConcurrency": 5,
			"coverage": false,
			"tunnel": "saucelabs"
		},

		"sauce-ie": {
			"extends": ["sauce"],
			"environments": [
				{ "browserName": "internet explorer", "version": "11",  "fixSessionCapabilities": false,
					"name": "intern-requirejs-example"}
			]
		},

		"sauce-ios": {
			"extends": ["sauce"],
			"environments": [
				{ "browserName": "iphone", "platform": "OS X 10.10", "version": "10.2", "deviceName": "iPad Retina", "name": "intern-requirejs-example" }
			]
		}
	}
}
